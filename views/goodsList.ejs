    }
</style>
<body>
<div>
    <form  action="./search" method="post" enctype="application/x-www-form-urlencoded">
        <input type="text" name="keyword" id="keyword">
        <input type="submit">
    </form>
</div>
<script>

    var curUrl = document.location.href;
    var curPageNum = curUrl.split('/')[4]
    curPageNum = parseInt(curPageNum)
    var totalDataCount = <%-dataCount%>;
    var pageListCount = (totalDataCount/30)+1
    var pageList = []
    var html =''
    for(var i = curPageNum; i < curPageNum+10;i++){

        pageList[i] = i
        html += "<div class='pageNum'><a href='./"+i+"'>"+i+'</a></div>'
        //console.log(html)
    }

    $(function () {
        $('#container1').html(html);
        $('#container2').html(html);
    })
</script>

<div class="wrap">

<h3>전체데이터 수 : <%-dataCount%></h3>

    <div id="container1"></div>
<%for(var i =0; i <data.length;i++){%>
<div class="contents">
    <ul>
        <li style="height: 250px;"><a href="/goodsList/prddetail/<%-data[i].data.item.source_id%>"><img src="<%-data[i].data.item.image%>" width="180px"></a></li>
        <li style="padding-bottom: 20px; height: 70px; widths: 180px ;"><%-data[i].data.item.short_name%></li>
        <li><%-data[i].data.item.category_id%></li>
    </ul>
</div>
<%}%>
</div>
<div id="container2" class="clb"></div>
</body>
</html>